<UserControl x:Class="Rapid_Monitoring.Components.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rapid_Monitoring.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <TextBlock Text="{TemplateBinding Content}" TextDecorations="Underline" />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Background="Beige" MaxWidth="1080" Margin="20 10" Height="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Column="0"
            FontSize="14"
            FontWeight="Bold"
            Foreground="Black"
            VerticalAlignment="Center"
            Text="{Binding Title}" />

        <Button
            Grid.Column="1"
            Margin="10 0 0 0"
            FontSize="14"
            VerticalAlignment="Center"
            Foreground="Black"
            Command="{Binding NavigateHomeCommand}"
            Content="Home" />

        <Button
            Grid.Column="2"
            Margin="10 0 0 0"
            FontSize="14"
            VerticalAlignment="Center"
            Foreground="Black"
            Command="{Binding NavigateProcessControlCommand}"
            Content="Process Control" />

        <Button
            Grid.Column="3"
            Margin="10 0 0 0"
            FontSize="14"
            VerticalAlignment="Center"
            Foreground="Black"
            Command="{Binding NavigateTemperatureTrendCommand}"
            Content="Temperature Trend"/>

        <Button
            Grid.Column="4"
            Margin="10 0 10 0"
            FontSize="14"
            VerticalAlignment="Center"
            Foreground="Black"
            Command="{Binding OpenConnectionCommand}"
            Content="Connection Settings"/>
    </Grid>
</UserControl>
