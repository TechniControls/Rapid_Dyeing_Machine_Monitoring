<UserControl x:Class="Lab_Stenter_Dryer.Components.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab_Stenter_Dryer.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid Background="#F3F4F6" MaxWidth="1080" Height="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <Image Source="/Assets/Icons/logoEncajes.PNG"
               Grid.Column="0"
               Width="170" Height="50"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Margin="20,0,0,0"/>

        <StackPanel Margin="0,3,32,0" Grid.Column="1">
            <TextBlock Text="Connection Status" 
FontSize="12" 
Foreground="#6B7280" 
HorizontalAlignment="Right"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                <Ellipse Width="12" Height="12" Fill="{Binding ColorConnectionStatus}" Margin="0,0,8,0">
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1.0" To="0.3" Duration="0:0:1"
                             AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
                <TextBlock Text="{Binding ConnectionStatus}" 
    FontSize="14" 
    FontWeight="SemiBold" 
    Foreground="#1F2937"/>
            </StackPanel>
        </StackPanel>

        <Button
            Grid.Column="2"
            Margin="10 0 0 0"
            FontSize="14"
            VerticalAlignment="Center"
            Foreground="Black"
            Command="{Binding NavigateHomeCommand}"
            Content="Home"
            Style="{StaticResource NavigationButton}"/>

        <Button
            Grid.Column="3"
            Margin="10 0 0 0"
            FontSize="14"
            VerticalAlignment="Center"
            Foreground="Black"
            Command="{Binding NavigateProcessControlCommand}"
            Content="Process Control"
            Style="{StaticResource NavigationButton}"/>

        <Button
            Grid.Column="4"
            Margin="10 0 0 0"
            FontSize="14"
            VerticalAlignment="Center"
            Foreground="Black"
            Command="{Binding NavigateTemperatureTrendCommand}"
            Content="Temperature Scatter"
            Style="{StaticResource NavigationButton}"/>

        <Button
            Grid.Column="5"
            Margin="10 0 30 0"
            FontSize="14"
            VerticalAlignment="Center"
            Foreground="Black"
            Command="{Binding OpenConnectionCommand}"
            Content="Connection"
            Style="{StaticResource NavigationButton}"/>
    </Grid>
</UserControl>
