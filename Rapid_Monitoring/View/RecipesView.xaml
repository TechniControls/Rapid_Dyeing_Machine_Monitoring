<UserControl x:Class="Rapid_Monitoring.View.RecipesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rapid_Monitoring.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Recipes Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Recipe Card 1 -->
                    <Border Grid.Column="0" Grid.Row="0" 
                                        BorderBrush="#E5E7EB" 
                                        BorderThickness="1" 
                                        CornerRadius="8" 
                                        Padding="16"
                                        Margin="20,8,8,8"
                                        Cursor="Hand"
                                        Width="300">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="15" ShadowDepth="3"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="32" Height="32" Fill="#3B82F6" Margin="0,0,12,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Polyester Blue Dye" FontSize="15" FontWeight="SemiBold" Foreground="#1F2937"/>
                                        <TextBlock Text="Recipe #1" FontSize="12" Foreground="#6B7280"/>
                                    </StackPanel>
                                </StackPanel>
                                <Path Fill="#F59E0B" 
                                                  Data="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                                                  Width="20" Height="20"
                                                  Stretch="Uniform"
                                                  HorizontalAlignment="Right"/>
                            </Grid>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <!--Temperature-->
                                    <TextBlock Text="Temperature:" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock Text="{Binding PolyesterRecipeTemperature}" FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0"/>
                                    <!--Speed-->
                                    <TextBlock Text="Speed:" FontSize="12" Foreground="#6B7280" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding PolyesterProcessSpeed}" FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="50,0,0,0">
                                    <TextBlock Text="Duration:" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock Text="{Binding PolyesterProcessTime}" FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                            <Button Content="Load Recipe" 
                                                Background="#EFF6FF" 
                                                Foreground="#3B82F6"
                                                FontWeight="Medium"
                                                Padding="12,10"
                                                BorderThickness="0"
                                                Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="6"
                                                            Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#DBEAFE"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Recipe Card 2 -->
                    <Border Grid.Column="1" Grid.Row="0" 
                                        BorderBrush="#E5E7EB" 
                                        BorderThickness="1" 
                                        CornerRadius="8" 
                                        Padding="16"
                                        Margin="8,8,0,8"
                                        Cursor="Hand"
                                        Width="300">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="15" ShadowDepth="3"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="32" Height="32" Fill="#EF4444" Margin="0,0,12,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Powernet Red Formula" FontSize="15" FontWeight="SemiBold" Foreground="#1F2937"/>
                                        <TextBlock Text="Recipe #2" FontSize="12" Foreground="#6B7280"/>
                                    </StackPanel>
                                </StackPanel>
                                <Path Fill="#F59E0B" 
                                                  Data="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                                                  Width="20" Height="20"
                                                  Stretch="Uniform"
                                                  HorizontalAlignment="Right"/>
                            </Grid>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Temperature:" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock Text="{Binding PowernetRecipeTemperature}" FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0"/>
                                    <!--Speed-->
                                    <TextBlock Text="Speed:" FontSize="12" Foreground="#6B7280" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding PowernetProcessSpeed}" FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="50,0,0,0">
                                    <TextBlock Text="Duration:" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock Text="{Binding PowernetProcessTime}" FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                            <Button Content="Load Recipe" 
                                                Background="#EFF6FF" 
                                                Foreground="#3B82F6"
                                                FontWeight="Medium"
                                                Padding="12,10"
                                                BorderThickness="0"
                                                Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="6"
                                                            Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#DBEAFE"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                    
                    <!--Recipe Card 3-->
                    <Border Grid.Column="2" Grid.Row="0" 
                     BorderBrush="#E5E7EB" 
                     BorderThickness="1" 
                     CornerRadius="8" 
                     Padding="16"
                     Margin="16,8,0,8"
                     Cursor="Hand"
                     Width="300">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="15" ShadowDepth="3"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="32" Height="32" Fill="#EF4444" Margin="0,0,12,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Blonda Red Formula" FontSize="15" FontWeight="SemiBold" Foreground="#1F2937"/>
                                        <TextBlock Text="Recipe #2" FontSize="12" Foreground="#6B7280"/>
                                    </StackPanel>
                                </StackPanel>
                                <Path Fill="#F59E0B" 
                               Data="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                               Width="20" Height="20"
                               Stretch="Uniform"
                               HorizontalAlignment="Right"/>
                            </Grid>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Temperature:" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock Text="{Binding BlondaRecipeTemperature}" FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0"/>
                                    <!--Speed-->
                                    <TextBlock Text="Speed:" FontSize="12" Foreground="#6B7280" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding BlondaProcessSpeed}" FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="50,0,0,0">
                                    <TextBlock Text="Duration:" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock Text="{Binding BlondaProcessTime}" FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                            <Button Content="Load Recipe" 
                             Background="#EFF6FF" 
                             Foreground="#3B82F6"
                             FontWeight="Medium"
                             Padding="12,10"
                             BorderThickness="0"
                             Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                         CornerRadius="6"
                                         Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#DBEAFE"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Add more recipe cards as needed -->
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
