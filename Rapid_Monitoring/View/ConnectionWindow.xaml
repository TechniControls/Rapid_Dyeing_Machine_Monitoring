<Window x:Class="Rapid_Monitoring.View.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rapid_Monitoring.View"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="ConnectionWindow" Height="375" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="PLC Connection Setup" HorizontalAlignment="Center" FontSize="20"
                   FontWeight="Bold" Margin="0,0,0,7" />
        <!-- Plc Connection Status -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Ellipse Width="14" Height="14"
                     Fill="Orange"
                     Margin="0,0,10,0">
                <Ellipse.Effect>
                    <DropShadowEffect Color="#27AE60" ShadowDepth="0" BlurRadius="8" />
                </Ellipse.Effect>
            </Ellipse>
            <TextBlock FontSize="14" FontWeight="Normal">
                <Run Text="Status:" Foreground="#333" />
                <Run Text="Disconnected"
                     FontWeight="SemiBold"
                     Foreground="#2C3E50" />
            </TextBlock>
        </StackPanel>

        <!-- Select Cpu Type -->
        <TextBlock Grid.Row="2" Text="Cpu Type" FontSize="14" FontWeight="SemiBold" Foreground="#2C3E50"
                   Margin="20,5,20,2" />
        <ComboBox Grid.Row="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                  Margin="20,0,20,5"
                  Height="27" ItemsSource="{Binding CpuTypes}"
                  FontSize="14" FontWeight="Normal"
                  Text="{Binding SelectedCpuType}"/>
        <!-- Input PLC IP Address -->
        <TextBlock Grid.Row="4" Text="IP Address" FontSize="14" FontWeight="SemiBold" Foreground="#2C3E50"
                   Margin="20,5,20,0" />
        <TextBox Grid.Row="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                 Margin="20,0,20,5" Height="27"
                 FontSize="14" FontWeight="Normal"
                 Text="{Binding PlcIpAddress}"/>
        <!-- Select Rack -->
        <TextBlock Grid.Row="6" Text="Rack" FontSize="14" FontWeight="SemiBold" Foreground="#2C3E50"
                   Margin="20,5,20,0" />
        <ComboBox Grid.Row="7" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                  Margin="20,0,20,5"
                  Height="27" ItemsSource="{Binding Racks}"
                  FontSize="14" FontWeight="Normal"
                  Text="{Binding SelectedRack}"/>
        <!-- Select Slot -->
        <TextBlock Grid.Row="8" Text="Slot" FontSize="14" FontWeight="SemiBold" Foreground="#2C3E50"
                   Margin="20,5,20,0" />
        <ComboBox Grid.Row="9" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                  Margin="20,0,20,5" Height="27"
                  ItemsSource="{Binding Slots}"
                  FontSize="14" FontWeight="Normal"
                  Text="{Binding SelectedSlot}"/>

        <!-- Buttons Connect - Disconnect - Close Modal -->
        <StackPanel Grid.Row="10" Margin="0,12,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Margin="0,0,120,0"
                        Content="Connect"
                        Height="35" Width="100"
                        FontSize="14" FontWeight="Medium"/>
                <Button Grid.Row="0" Margin="120,0,0,0"
                        Content="Disconnect"
                        Height="35" Width="100"
                        FontSize="14" FontWeight="Medium"/>

            </Grid>
        </StackPanel>
    </Grid>
</Window>
