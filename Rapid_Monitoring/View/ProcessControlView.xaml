<UserControl x:Class="Lab_Stenter_Dryer.View.ProcessControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab_Stenter_Dryer.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Temperature Control -->
                <Border Grid.Column="0" Grid.Row="0"
                            Background="#F9FAFB"
                            CornerRadius="8"
                            Padding="24"
                            Margin="12,10,12,0">
                    <StackPanel>
                        <TextBlock Text="Temperature Control"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#1F2937"
                                       Margin="0,0,0,16" />
                        <TextBlock Text="Target Temperature (°C)"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="#374151"
                                       Margin="0,0,0,8" />
                        <TextBox Text="{Binding CustomTemperature}"
                                     FontSize="14"
                                     Padding="12,10"
                                     Margin="0,0,0,16"
                                     BorderBrush="#D1D5DB"
                                     BorderThickness="1" />

                        <Button Content="Set Temperature"
                                    Style="{StaticResource SecondaryButtonStyle}" 
                                    Command="{Binding SetTemperatureCommand}"/>
                    </StackPanel>
                </Border>
                <!-- Fan Control -->
                <Border Grid.Column="1" Grid.Row="0"
        Background="#F9FAFB"
        CornerRadius="8"
        Padding="24"
        Margin="0,15,10,0">
                    <StackPanel>
                        <TextBlock Text="Fan Speed Control"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="#1F2937"
                   Margin="0,0,0,16" />
                        <TextBlock Text="Target Speed (RPM)"
                   FontSize="13"
                   FontWeight="Medium"
                   Foreground="#374151"
                   Margin="0,0,0,8" />
                        <TextBox Text="{Binding CustomFanSpeed}"
                 FontSize="14"
                 Padding="12,10"
                 Margin="0,0,0,16"
                 BorderBrush="#D1D5DB"
                 BorderThickness="1" />
                        <Button Content="Set Speed"
                Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding SetFanSpeedCommand}"/>
                    </StackPanel>
                </Border>
                <!-- Duration Time Control -->
                <Border Grid.Column="0" Grid.Row="1"
        Background="#F9FAFB"
        CornerRadius="8"
        Padding="24"
        Margin="12,10,12,0">
                    <StackPanel>
                        <TextBlock Text="Duration Time Control"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="#1F2937"
                   Margin="0,0,0,16" />
                        <TextBlock Text="Target Time (Min)"
                   FontSize="13"
                   FontWeight="Medium"
                   Foreground="#374151"
                   Margin="0,0,0,8" />
                        <TextBox Text="{Binding CustomDurationTime}"
                 FontSize="14"
                 Padding="12,10"
                 Margin="0,0,0,16"
                 BorderBrush="#D1D5DB"
                 BorderThickness="1" />
                        <Button Content="Set Time"
                Style="{StaticResource SecondaryButtonStyle}" 
                                    Command="{Binding SetTimeCommand}"/>
                    </StackPanel>
                </Border>
                <!-- Extractor Speed Control -->
                <Border Grid.Column="2" Grid.Row="0"
Background="#F9FAFB"
CornerRadius="8"
Padding="24"
Margin="0,15,10,0">
                    <StackPanel>
                        <TextBlock Text="Extractor Speed Control"
           FontSize="16"
           FontWeight="SemiBold"
           Foreground="#1F2937"
           Margin="0,0,0,16" />
                        <TextBlock Text="Target Speed (RPM)"
           FontSize="13"
           FontWeight="Medium"
           Foreground="#374151"
           Margin="0,0,0,8" />
                        <TextBox Text="{Binding CustomExtractorSpeed}"
         FontSize="14"
         Padding="12,10"
         Margin="0,0,0,16"
         BorderBrush="#D1D5DB"
         BorderThickness="1" />
                        <Button Content="Set Speed"
        Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding SetExtractorSpeedCommand}"/>
                    </StackPanel>
                </Border>
                <!-- Control Functions -->
                <Border Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3"
                            Background="#F9FAFB"
                            CornerRadius="8"
                            Padding="24"
                            Margin="12,50,12,0">
                    <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--Control Buttons-->
                            <!--Start Button-->
                            <Button Grid.Column="0" Content="Start" 
                                    Margin="6,0,3,0" Style="{StaticResource SecondaryButtonStyle}"
                                        Command="{Binding StartCommand}"/>
                            <!--Stop Button-->
                            <Button Grid.Column="1" Content="Stop"
                                        Margin="6,0,3,0" Style="{StaticResource SecondaryButtonStyle}"
                                        Command="{Binding StopCommand}"/>

                            <!--Reset Button-->
                            <Button Grid.Column="2" Content="Reset"
                                        Margin="6,0,3,0" Style="{StaticResource SecondaryButtonStyle}"
                                        Command="{Binding ResetCommand}"/>

                            <!--Pause Button-->
                            <Button Grid.Column="3" Content="Pause"
                                         Margin="6,0,0,0" Style="{StaticResource SecondaryButtonStyle}"
                                        Command="{Binding PauseCommand}"/>
                            <!--Recipe Manual/Auto Button-->
                            <Button Grid.Column="0" Grid.Row="1" Content="{Binding RecipesStatusBtn}"
                                        Margin="6,30,3,0" Style="{StaticResource SecondaryButtonStyle}"
                                        Command="{Binding AutoRecipeCommand}"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
