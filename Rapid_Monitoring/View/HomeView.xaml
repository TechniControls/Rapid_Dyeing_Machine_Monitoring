<UserControl x:Class="Lab_Stenter_Dryer.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab_Stenter_Dryer.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Card -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title and Status -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Polyester" 
                                  FontSize="28" 
                                  FontWeight="Bold" 
                                  Foreground="#1F2937"/>
                        <TextBlock Text="Temperature Control &amp; Recipe Management" 
                                  FontSize="14" 
                                  Foreground="#6B7280" 
                                  Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Status and Temperature -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="30,0,0,0">
                        <!-- Machine Status -->
                        <StackPanel Margin="50,0,32,0">
                            <TextBlock Text="Estado Actual" 
                                      FontSize="12" 
                                      Foreground="#6B7280" 
                                      HorizontalAlignment="Right"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                                <Ellipse Width="12" Height="12" Fill="{Binding ColorMachineStatus}" Margin="0,0,8,0">
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                   From="1.0" To="0.3" Duration="0:0:1"
                                                                   AutoReverse="True"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                </Ellipse>
                                <TextBlock Text="{Binding MachineStatus}" 
                                          FontSize="14" 
                                          FontWeight="SemiBold" 
                                          Foreground="#1F2937"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- PT100-1 Temperature -->
                        <StackPanel >
                            <TextBlock Text="PT100-1" 
                                      FontSize="12" 
                                      Foreground="#6B7280"/>
                            <TextBlock FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#3B82F6" 
                                       Margin="0,4,0,0">
                                <Run Text="{Binding ValueFirstPT100, Mode=OneWay}"/>
                                <Run Text="°C"/>
                            </TextBlock>
                        </StackPanel>
                        <!-- PT100-2 Temperature -->
                        <StackPanel Margin="20,0,0,0">
                            <TextBlock Text="PT100-2"
                                       FontSize="12" 
                                       Foreground="#6B7280"/>
                            <TextBlock FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#3B82F6" 
                                       Margin="0,4,0,0">
                                <Run Text="{Binding ValueSecondPT100, Mode=OneWay}"/>
                                <Run Text="°C"/>
                            </TextBlock>
                        </StackPanel>
                        <!-- Delta Temperature -->
                        <StackPanel Margin="20,0,0,0">
                            <TextBlock Text="Δ°C"
                                       FontSize="12"
                                       Foreground="#6B7280"/>
                            <TextBlock
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#3B82F6" 
                                       Margin="0,4,0,0">
                                <Run Text="{Binding TemperatureDelta,
                                    Mode=OneWay,
                                    StringFormat={}{0:F1}}"/>
                                <Run Text="°C"/>
                            </TextBlock>
                        </StackPanel>
                        <!-- Alarms Status -->
                        <StackPanel Margin="32,0,32,0">
                            <TextBlock Text="Alarmas" 
                               FontSize="12" 
                               Foreground="#6B7280" 
                               HorizontalAlignment="Left"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                                <Ellipse Width="12" Height="12" Fill="{Binding ColorAlarmsStatus}" Margin="0,0,8,0">
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                     From="1.0" To="0.3" Duration="0:0:1"
                                                                     AutoReverse="True"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                </Ellipse>
                                <TextBlock Text="{Binding AlarmsStatus}"
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#1F2937"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Cycle Progress -->
                <StackPanel Grid.Row="1" Margin="0,24,0,0">
                    <Grid Margin="0,0,0,8">
                        <TextBlock Text="Cycle Progress" 
                                  FontSize="12" 
                                  Foreground="#6B7280" 
                                  HorizontalAlignment="Left"/>
                        <TextBlock Text="45% Complete" 
                                  FontSize="12" 
                                  Foreground="#6B7280" 
                                  HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Recipes Content -->
        <ScrollViewer HorizontalScrollBarVisibility="Auto" Grid.Row="1">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Recipe Card 1 -->
                    <Border Grid.Column="0" Grid.Row="0" 
                                 BorderBrush="#E5E7EB" 
                                 BorderThickness="1" 
                                 CornerRadius="8" 
                                 Padding="16"
                                 Margin="0,8,0,8"
                                 Cursor="Hand"
                                 Width="300">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="15" ShadowDepth="3"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="32" Height="32" Fill="#3B82F6" Margin="0,0,12,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Polyester" FontSize="15" FontWeight="SemiBold" Foreground="#1F2937"/>
                                        <TextBlock Text="Recipe #1" FontSize="12" Foreground="#6B7280"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <!--Temperature-->
                                    <TextBlock Text="Temperature:" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0">
                                        <Run Text="{Binding PolyesterTemperature, Mode=OneWay}"/>
                                        <Run Text="°C"/>
                                    </TextBlock>
                                    <!--Fan Speed-->
                                    <TextBlock Text="Fan Speed:" FontSize="12" Foreground="#6B7280" Margin="0,5,0,0"/>
                                    <TextBlock  FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0">
                                        <Run Text="{Binding PolyesterFanSpeed, Mode=OneWay}"/>
                                        <Run Text="RPM"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="50,0,0,0">
                                    <!--Duration Time-->
                                    <TextBlock Text="Duration:" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0">
                                        <Run Text="{Binding PolyesterProcessTime, Mode=OneWay}"/>
                                        <Run Text="Min"/>
                                    </TextBlock>
                                    <!--Extractor Speed-->
                                    <TextBlock Text="Extractor Speed:" FontSize="12" Foreground="#6B7280" Margin="0,5,0,0"/>
                                    <TextBlock  FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0">
                                        <Run Text="{Binding PolyesterExtractorSpeed, Mode=OneWay}"/>
                                        <Run Text="RPM"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                            <!--Button Load Recipe 1-->
                            <Button Content="Load Recipe" 
                                         Background="#EFF6FF" 
                                         Foreground="#3B82F6"
                                         FontWeight="Medium"
                                         Padding="12,10"
                                         BorderThickness="0"
                                         Cursor="Hand"
                                    Command="{Binding LoadRecipeOneCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                     CornerRadius="6"
                                                     Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#DBEAFE"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Recipe Card 2 -->
                    <Border Grid.Column="1" Grid.Row="0" 
                                 BorderBrush="#E5E7EB" 
                                 BorderThickness="1" 
                                 CornerRadius="8" 
                                 Padding="16"
                                 Margin="8,8,0,8"
                                 Cursor="Hand"
                                 Width="300">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="15" ShadowDepth="3"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="32" Height="32" Fill="#EF4444" Margin="0,0,12,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Powernet" FontSize="15" FontWeight="SemiBold" Foreground="#1F2937"/>
                                        <TextBlock Text="Recipe #2" FontSize="12" Foreground="#6B7280"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <!--Temperature-->
                                    <TextBlock Text="Temperature:" />
                                    <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0">
                                        <Run Text="{Binding PowernetTemperature, Mode=OneWay}" />
                                        <Run Text="°C"/>
                                    </TextBlock>
                                    <!--Fan Speed-->
                                    <TextBlock Text="Fan Speed:" FontSize="12" Foreground="#6B7280" Margin="0,5,0,0"/>
                                    <TextBlock Text="" FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0">
                                        <Run Text="{Binding PowernetFanSpeed, Mode=OneWay}"/>
                                        <Run Text="RPM"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="50,0,0,0">
                                    <!--Duration Time-->
                                    <TextBlock Text="Duration:" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock  FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0">
                                        <Run Text="{Binding PowernetProcessTime, Mode=OneWay}"/>
                                        <Run Text="Min"/>
                                    </TextBlock>
                                    <!--Extractor Speed-->
                                    <TextBlock Text="Extractor Speed:" FontSize="12" Foreground="#6B7280" Margin="0,5,0,0"/>
                                    <TextBlock  FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0">
                                        <Run Text="{Binding PowernetExtractorSpeed, Mode=OneWay}"/>
                                        <Run Text="RPM"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                            <Button Content="Load Recipe" 
                                         Background="#EFF6FF" 
                                         Foreground="#3B82F6"
                                         FontWeight="Medium"
                                         Padding="12,10"
                                         BorderThickness="0"
                                         Cursor="Hand"
                                    Command="{Binding LoadRecipeTwoCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                     CornerRadius="6"
                                                     Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#DBEAFE"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!--Recipe Card 3-->
                    <Border Grid.Column="2" Grid.Row="0" 
              BorderBrush="#E5E7EB" 
              BorderThickness="1" 
              CornerRadius="8" 
              Padding="16"
              Margin="8,8,0,8"
              Cursor="Hand"
              Width="300">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="15" ShadowDepth="3"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="32" Height="32" Fill="#EF4444" Margin="0,0,12,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Blonda" FontSize="15" FontWeight="SemiBold" Foreground="#1F2937"/>
                                        <TextBlock Text="Recipe #3" FontSize="12" Foreground="#6B7280"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Temperature:" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock  FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0">
                                        <Run Text="{Binding BlondaTemperature, Mode=OneWay}" />
                                        <Run Text="°C"/>
                                    </TextBlock>
                                    <!--Fan Speed-->
                                    <TextBlock Text="Fan Speed:" FontSize="12" Foreground="#6B7280" Margin="0,5,0,0"/>
                                    <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0">
                                        <Run Text="{Binding BlondaFanSpeed, Mode=OneWay}" />
                                        <Run Text="RPM"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="50,0,0,0">
                                    <!--Duration Time-->
                                    <TextBlock Text="Duration:" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0">
                                        <Run Text="{Binding BlondaProcessTime, Mode=OneWay}"/>
                                        <Run Text="Min"/>
                                    </TextBlock>
                                    <!--Extractor Speed-->
                                    <TextBlock Text="Extractor Speed:" FontSize="12" Foreground="#6B7280" Margin="0,5,0,0"/>
                                    <TextBlock  FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0">
                                        <Run Text="{Binding BlondaExtractorSpeed, Mode=OneWay}"/>
                                        <Run Text="RPM"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                            <Button Content="Load Recipe" 
                      Background="#EFF6FF" 
                      Foreground="#3B82F6"
                      FontWeight="Medium"
                      Padding="12,10"
                      BorderThickness="0"
                      Cursor="Hand"
                                    Command="{Binding LoadRecipeThreeCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                  CornerRadius="6"
                                  Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#DBEAFE"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!--Recipe card 4-->
                    <Border Grid.Column="3" Grid.Row="0"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="8,8,0,8"
                            Cursor="Hand"
                            Width="300">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="15" ShadowDepth="3"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="32" Height="32" Fill="#EF4444" Margin="0,0,12,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Decoration" FontSize="15" FontWeight="SemiBold" Foreground="#1F2937"/>
                                        <TextBlock Text="Recipe #4" FontSize="12" Foreground="#6B7280"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <!--Temperature-->
                                    <TextBlock Text="Temperature:" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock  FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0">
                                        <Run Text="{Binding DecorationTemperature, Mode=OneWay}"/>
                                        <Run Text="°C"/>
                                    </TextBlock>
                                    <!--Fan Speed-->
                                    <TextBlock Text="Fan Speed:" FontSize="12" Foreground="#6B7280" Margin="0,5,0,0"/>
                                    <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0">
                                        <Run Text="{Binding DecorationFanSpeed, Mode=OneWay}"/>
                                        <Run Text="RPM"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="50,0,0,0">
                                    <!--Duration-->
                                    <TextBlock Text="Duration:" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0">
                                        <Run Text="{Binding DecorationProcessTime, Mode=OneWay}"/>
                                        <Run Text="Min"/>
                                    </TextBlock>
                                    <!--Extractor Speed-->
                                    <TextBlock Text="Extractor Speed:" FontSize="12" Foreground="#6B7280" Margin="0,5,0,0"/>
                                    <TextBlock  FontSize="12" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,2,0,0">
                                        <Run Text="{Binding DecorationExtractorSpeed, Mode=OneWay}"/>
                                        <Run Text="RPM"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                            <Button Content="Load Recipe" 
        Background="#EFF6FF" 
        Foreground="#3B82F6"
        FontWeight="Medium"
        Padding="12,10"
        BorderThickness="0"
        Cursor="Hand"
                                Command="{Binding LoadRecipeFourCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                    CornerRadius="6"
                    Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#DBEAFE"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Add more recipe cards as needed -->
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
