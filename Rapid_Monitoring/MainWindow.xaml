<Window x:Class="Rapid_Monitoring.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rapid_Monitoring"
        xmlns:component="clr-namespace:Rapid_Monitoring.Components"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Lab Stenter" Height="560" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Navigation Bar-->
        <ContentControl Grid.Row="0" x:Name="NavigationBarHost"/>
        <!--Content for show views-->
        <ContentControl Grid.Row="1" x:Name="NavigationContent"/>
    </Grid>
</Window>
